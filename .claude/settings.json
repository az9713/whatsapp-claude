{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(node *)",
      "Bash(npx *)",
      "Bash(yt-dlp *)",
      "Bash(ffmpeg *)",
      "Bash(whisper *)",
      "Bash(python *)",
      "Bash(crontab *)",
      "Bash(mkdir *)",
      "Bash(cd *)",
      "Read(*)",
      "Write(*)",
      "Edit(*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Hook] File modified'",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Hook] Task completed'"
          }
        ]
      }
    ]
  }
}
